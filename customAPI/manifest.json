{
    "manifest_version": 2,
    "name": "Custom API",
    "version": "1.0",

    "background": {
      "scripts": ["background.js"]
    },

    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/page-16.png",
        "48": "icons/page-48.png",
        "128": "icons/page-128.png"
      }
    },

    "experiment_apis": {
      "myAPI": {
        "schema": "schema.json",
        "parent": {
          "scopes": ["addon_parent"],
          "paths": [["myAPI"]],
          "script": "implementation.js"
        }
      }
    },

    "applications": {
        "gecko": {
        "id": "my-extension@example.com"
        }
    }
}
  